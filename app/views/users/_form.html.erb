<div class="ui middle aligned center aligned grid">
  <div class="twelve wide column">
  	<%= render 'shared/errors', obj: @user, message: message_type, type: "user" %>
    <%= form_for(@user, url: @user.new_record? ? signup_path : user_path, html: {class: "ui form"}) do |f| %>
      <div class="ui raised segment">
      	<div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :username, type: "text", class: "input", placeholder: "Username (Full Name)", autofocus: true, autocomplete: "off" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, type: "email", class: "input", placeholder: "E-mail address - for login", autocomplete: "off" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, class: "input", placeholder: "Password", autocomplete: "off" %>
          </div>
        </div>
        <%= f.submit(@user.new_record? ? "Sign Up" : "Update Details", class: "ui large secondary submit button") %>
    <% end %>
  </div>  
</div>