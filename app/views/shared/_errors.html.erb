<% if obj.errors.any? %>
	<div class="ui negative message">
		<div class="header">
			<%= pluralize(obj.errors.count, "error") %> occurred when trying to <%= message %>&nbsp<%= type %>:
		</div>
		<ul class="list">
			<% obj.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>