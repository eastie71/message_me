<h2 class="ui center aligned icon header">
  <i class="circular grey paper plane icon home-icon-adjust"></i>
  Let's Chat!
</h2>

<div class="ui two column grid stackable cards">
	<div class="four wide column">
		<div class="ui fluid raised card chatbox">
			<div class="content">
				<div class="ui inverted vertical fluid menu">
				  <a class="item active">
				    Home
				  </a>
				  <a class="item">
				    Messages
				  </a>
				  <a class="item">
				    Friends
				  </a>
				</div>
			</div>
		</div>
	</div>

	<div class="twelve wide column">
		<div class="ui fluid raised card chatbox">
			<div class="content" id="messages">
				<div class="ui feed" id="message-append">
					<%= render @messages %>
				</div>
			</div>
			<div class="extra content">
				<%= form_for(@message, url: message_path, html: {class: "ui reply form", role: "form"}, remote: true) do |f| %>
					<div class="field">
						<div class="ui fluid icon input">
							<%= f.text_field :content, placeholder: "Enter your message...", autofocus: true %>
							<%= f.button '<i class="bordered inverted icon edit"></i>'.html_safe %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>